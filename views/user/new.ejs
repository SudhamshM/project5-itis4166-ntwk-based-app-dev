<%- include('../partials/header.ejs')%>
<h1 class="text-center">Signup</h1>
<div class="container w-75 p-3 rounded">
    <form action="/users" method="post">
        <div class="form-group row p-2">
                <label for="firstName" class="form-label col-sm-2">First Name</label>
                <div class="col-sm-10">
                <input type="text" autocomplete="none" name="firstName" class="form-control" required id="firstName" 
                aria-describedby="firstName" placeholder="Enter first name">
                </div>
        </div>
        <div class="form-group row p-2">
                <label for="lastName" class="form-label col-sm-2">Last Name</label>
                <div class="col-sm-10">
                <input type="text" autocomplete="none" name="lastName" class="form-control" required id="lastName" aria-describedby="lastName" placeholder="Enter last name">
        </div>
        </div>
        <div class="form-group row p-2">
          <label for="email" class="form-label col-sm-2">Email address</label>
          <div class="col-sm-10">
          <input type="email" autocomplete="none" name="email" class="form-control" required id="email" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        </div>
        <div class="form-group row p-2">
          <label for="password" class="form-label col-sm-2">Password</label>
          <div class="col-sm-10">
          <input type="password" class="form-control" required name="password" minlength="8" maxlength="64" id="password" placeholder="Password">
        </div>
        </div>
        <div class="form-group row justify-content-end">
                <div class="col-sm-10 pt-2">
        <button type="submit" class="btn btn-primary w-100">Create Account</button>
</div>
</div>
      </form>
    </div>

    <%- include('../partials/footer.ejs')%>


