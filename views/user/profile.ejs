
<%- include('../partials/header.ejs')%>
<h1 class="text-center">Profile of <em><%= user.firstName + ' ' + user.lastName %></em></h1>
<div class="container w-75 p-5">
    <% if (events.length > 0) { %>
        <div class="p-1 mb-1 d-flex justify-content-between">
            
            <h3 class="d-inline">Your Meetups</h3>
            <a href="/events/new" type="button" class="btn btn-light">
                <span class="me-2">Create New Meetup</span><i class="fa-solid fa-plus"></i>
            </a>
        </div>
        <table class="table text-center shadow p-3 mb-5 rounded">
            <thead class="bg-meetup">
                <tr>
                    <th class="h3">Title</th>
                    <th class="h3 col-sm-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                    <tr class="border border-bottom">
                        <td>
                            <a href="/events/<%= event._id %>" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"><%= event.title %></a>
                        </td>
                        <td>
                            <form>
                            <button type="submit" class="btn btn-danger" formaction="/events/<%= event._id %>?_method=DELETE" formmethod="post" value="Delete">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                            <button type="submit" formaction="/events/<%= event._id %>/edit" formmethod="get" class="btn btn-success" value="Edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>  
                        </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <h3>You don't have any Meetups. <a href="/events/new" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Create one now!</a></h3>
    <% } %>
    <br>
    <% if (rsvps.length > 0) { %>
     <h3>Your RSVPs</h3>
     <table class="table text-center shadow p-3 mb-5 rounded">
        <thead class="bg-meetup">
            <tr>
                <th class="h3">Event</th>
                <th class="h3 col-sm-3">Status</th>
            </tr>
        </thead>
        <tbody>
            <% rsvps.forEach(rsvp => { %>
                <tr class="border border-bottom">
                    <td>
                        <a href="/events/<%= rsvp.event._id %>" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"><%= rsvp.event.title %></a>
                    </td>
                    <td>
                        <p><%= rsvp.status %></p>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <% } %>
    
</div>
<%- include('../partials/footer.ejs')%>


